<ResourceDictionary x:Class="MeterAppT10.Resources.ReadingsTemplates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="using:MeterAppT10.ViewModels">

    <DataTemplate x:Key="ElectricTemplate"
                  x:DataType="viewModels:ElectricMeterViewModel">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Width="300"
                        Margin="5"
                        Background="Gold"
                        Orientation="Vertical">
                <TextBlock FontWeight="Bold"
                           Text="Electric Meter" />
                <TextBlock Text="{Binding Path=Name}" />
                <TextBlock Text="{Binding Path=SerialNumber}" />
                <TextBlock Text="{Binding Path=Electricity}" />
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Margin="5">
                <Button Width="80"
                        Height="40"
                        Command="{Binding EditCommand}"
                        Content="Edit" />
            </StackPanel>
        </Grid>

    </DataTemplate>


</ResourceDictionary>