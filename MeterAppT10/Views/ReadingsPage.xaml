<Page x:Class="MeterAppT10.Views.ReadingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:resources="using:MeterAppT10.Resources"
      xmlns:viewModels="using:MeterAppT10.ViewModels">

    <Page.DataContext>
        <viewModels:ReadingsMetersViewModel />
    </Page.DataContext>

    <Page.Resources>
        <resources:CustomDataTemplateSelector x:Key="CustomDataTemplateSelector" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ListView Grid.Column="0"
                  ItemTemplateSelector="{StaticResource CustomDataTemplateSelector}"
                  ItemsSource="{Binding SelectedZigbeeMeter}" />

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0"
                            Content="{Binding SelectedZigbeeMeter}"
                            ContentTemplateSelector="{StaticResource CustomDataTemplateSelector}" />
        </Grid>

    </Grid>

</Page>